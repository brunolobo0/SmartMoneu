@model smartmoney.Models.Meta

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">

    <h1>Deletar Meta</h1>

    <h3>Tem certeza que deseja deletar essa meta?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataInicial)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataInicial)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataFinal)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataFinal)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ValorMeta)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ValorMeta)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Valor)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-outline-danger" />
            <a class="btn btn-outline-secondary ms-1 fw-bold" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>

