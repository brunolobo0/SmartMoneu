@using System.Security.Claims;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartMoney</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/smartmoney.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
</head>
<body class="bg-secondary bg-opacity-10">
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom">
            <div class="container d-flex justify-content-between">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.svg"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Carteiras" asp-action="Index">Carteiras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Transacoes" asp-action="Index">Transações</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Metas" asp-action="Index">Metas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-area="" asp-controller="Usuarios" asp-action="Edit" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value">Perfil</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" style="min-height:80vh;">
            @if (TempData["MensagemSucesso"] != null)
            {
                <div class="container">
                    <div class="alert alert-success mt-3 alert-dismissible fade show" role="alert">
                        @TempData["MensagemSucesso"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white py-3">
        <nav>
            <div class="container d-flex justify-content-between align-items-start">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.svg" /></a>
                <div class="d-none d-sm-none d-md-block">
                    <h4>Contato</h4>
                    <p class="pt-1">contato@smartmoney.com</p>
                    <div class="d-flex gap-3 fs-5">
                        <i class="fa fa-instagram text-primary"></i>
                        <i class="fa fa-facebook-square text-primary"></i>
                        <i class="fa fa-youtube-play text-primary"></i>
                    </div>
                </div>
                <div class="d-none d-sm-none d-md-block">
                    <h4>Acesso fácil</h4>
                    <a class="pt-1 nav-link fw-medium" asp-area="" asp-controller="Carteiras" asp-action="Index">Carteiras</a>
                    <a class="pt-1 nav-link fw-medium" asp-area="" asp-controller="Transacoes" asp-action="Index">Transações</a>
                    <a class="pt-1 nav-link fw-medium" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias</a>
                    <a class="pt-1 nav-link fw-medium" asp-area="" asp-controller="Metas" asp-action="Index">Metas</a>
                    <a class="nav-link fw-medium" asp-area="" asp-controller="Usuarios" asp-action="Edit" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value">Perfil</a>

                </div>
                <p class="d-none d-sm-none d-md-none d-lg-block">&copy; SmartMoney</p>
            </div>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
