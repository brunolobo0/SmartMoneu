@model smartmoney.Models.Categoria

@{
    ViewData["Title"] = "Excluir categoria";
}

<div class="container my-5">
    <h3>Tem certeza que deseja excluir essa categoria?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
        </dl>   

        @if (ViewBag.error == 1)
        {
            <div class="alert alert-danger" role="alert">
                Essa categoria não pode ser excluída. Verifique se alguma transação possui essa categoria.
            </div>
            
        }
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-outline-danger" />
            <a class="btn btn-outline-secondary ms-1 fw-bold" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>
