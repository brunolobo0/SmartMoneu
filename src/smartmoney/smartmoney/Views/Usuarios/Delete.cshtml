@using System.Security.Claims;

@model smartmoney.Models.Usuario

@{
    ViewData["Title"] = "Excluir conta";
}

<div class="container my-5">
    <h1>Excluir conta</h1>
    <h3>Tem certeza de que deseja excluir sua conta?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-outline-danger" />
        <a asp-action="Edit" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" class="text-primary btn fw-bold">Voltar</a>
    </form>
</div>
