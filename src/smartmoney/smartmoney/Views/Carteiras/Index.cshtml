@model IEnumerable<smartmoney.Models.Carteira>

@{
    ViewData["Title"] = "Carteiras";
}

<div class="container">
    <div class="d-flex align-items-center gap-4 mt-5">
        <h1>Carteiras</h1>
        <a class="text-white btn btn-primary fw-bold btn-lg" asp-action="Create">+ NOVA CARTEIRA</a>
    </div>

    <div class="d-flex flex-wrap gap-3 mt-4 mb-5">
        @foreach (var item in Model)
        {
            <div class="card" style="min-width:360px;">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2">
                        <span class="fa-stack fa-2x">
                            <i class="fa fa-circle fa-stack-2x icon-background text-secondary"></i>
                            <i class="fa fa-dollar fa-stack-1x fs-4 text-white"></i>
                        </span>
                        <h4 class="fs-3 fw-medium">
                            @Html.DisplayFor(modelItem => item.Titulo)
                        </h4>
                    </div>
                    <p class="card-title fs-5 pt-1">
                        <span class="text-secondary">Saldo atual:</span> R$ @Html.DisplayFor(modelItem => item.Saldo)
                    </p>
                    <div class="d-flex justify-content-between">
                        <div class="pt-1">
                            <a class ="text-white btn btn-primary fw-bold" asp-action="Details" asp-route-id="@item.Id">Visualizar</a>
                        </div>
                        <div class="pt-3 d-flex gap-3">
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
