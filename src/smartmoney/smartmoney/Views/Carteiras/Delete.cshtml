@model smartmoney.Models.Carteira

@{
    ViewData["Title"] = "Excluir";
}
<div class="container my-5">
    <h1>Excluir Carteira</h1>

    <h3>Tem certeza que deseja excluir essa carteira?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Saldo)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Saldo)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-outline-danger" />
            <a class="btn btn-outline-secondary ms-1 fw-bold" asp-action="Index">Voltar</a>
        </form>
    </div>
</div>